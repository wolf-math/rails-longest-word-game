<h1>New Game</h1>
<h3>type the longest work with these letters.</h3>

<% time = Time.now.to_s %>

<ul>
  <% @letters.each do |letter| %>
  <li class="btn btn-primary"><%= letter %></li>
  <% end %>
</ul>


<form action="/score_post" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value=<%= @letters.join %>>
  <input type="hidden" name="time" value=<%= time %>>
  <input type="text" name="word">
  <input type="submit" value="Submit">
</form>
